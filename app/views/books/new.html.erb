<!-- Validation failure messages -->
<% if @book.errors.any? %>
  <% @book.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Book</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_book" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->


        <input type="hidden" name="user_id" value="<%= current_user.id %>">
      
      <!-- Label and input for cover_url -->
      <div class="form-group">
        <label for="cover_url" class="control-label">
          Cover url
        </label>

        <input type="text" id="cover_url" name="cover_url" placeholder="Cover url" class="form-control" value="<%= @book.cover_url %>">
      </div>
      
      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @book.title %>">
      </div>
      
      <!-- Label and input for author -->
      <div class="form-group">
        <label for="author" class="control-label">
          Author
        </label>

        <input type="text" id="author" name="author" placeholder="Author" class="form-control" value="<%= @book.author %>">
      </div>

  <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @book.description %></textarea>
      </div>


      <!-- Label and input for page_number -->
      <div class="form-group">
        <label for="page_number" class="control-label">
          Page number
        </label>

        <input type="text" id="page_number" name="page_number" placeholder="Page number" class="form-control" value="<%= @book.page_number %>">
      </div>

    
      
      

     

      <button class="btn btn-success">
        Create Book
      </button>
      or
      <a href="/books">Cancel</a>
    </form>
  </div>
</div>
