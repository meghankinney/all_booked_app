<div class="page-header">
  <h1>
    Nominations

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Cover</th>
        <th>Book</th>
        <th>Month</th>
        <th>Actions</th>

      </tr>

      <% @nominations.each do |nomination| %>
      <tr>
        <td><a href="/books/<%=nomination.book_id%>"><img src="<%= nomination.book.cover_url %>" width="80"></a></td>
        <td><a href="/books/<%=nomination.book_id%>"><%= nomination.book.title %></a></td>
        <td><a href="/months/<%= nomination.month_id%>"><%= nomination.month.started_on.strftime("%B %Y") %></a></td>
        <td>
          <a href="/nominations/<%= nomination.id %>" class="btn btn-primary">Show</a>

          <a href="/delete_nomination/<%= nomination.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>



      </tr>
      <% end %>
    </table>
  </div>
</div>
