<!-- Validation failure messages -->
<% if @nomination.errors.any? %>
  <% @nomination.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Nomination</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_nomination" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for book_id -->
      <div class="form-group">
        <label for="book_id" class="control-label">
          Book
        </label>

         <div >
      <%= select_tag(:book_id, options_from_collection_for_select(Book.all, :id, :title), :class => "form-control") %>
    </div>
      </div>

      <!-- Label and input for month_id -->
      <div class="form-group">
        <label for="month_id" class="control-label">
          Month
        </label>

          <%= select_tag(:month_id, options_from_collection_for_select(Month.all, :id, :started_on), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Nomination
      </button>
      or
      <a href="/nominations">Cancel</a>
    </form>
  </div>
</div>
