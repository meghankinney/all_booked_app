<div class="page-header">
  <h1>
    <%=@user.username%>
    <a href="/books/new" class="btn btn-lg btn-success">New Book</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Cover</th>
       <th>Title</th>
        <th>Author</th>
        <th>Description</th>
        <th>Pages</th>
        <th>User</th>
        <th>Actions</th>
        <th>Nominate</th>
      </tr>

      <% @user.books.order(created_at: :desc).each do |book| %>
      <tr>
        <td><a href="/books/<%= book.id %>"><img src="<%= book.cover_url %>" width="80"></a></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
       <td><%= book.page_number %></td>
        <td><%= book.user.username %></td>
        <td>
          <a href="/books/<%= book.id %>" class="btn btn-primary">Show</a>
          <a href="/books/<%= book.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_book/<%= book.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>

<!-- Trying code for nominate-->

   <td>
          <% nomination = Nomination.find_by(:book_id => book.id, :month_id => @month.last.id) %>
          <% if nomination.present? %>
            <a href="/delete_nomination/<%= nomination.id %>" class="btn btn-default">
             Delete Nomination for <%=@month.last.started_on.strftime("%B %Y")%>
            </a>


          <% else %>



  <form action="/create_nomination" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for book_id -->


     <input type="hidden" name="book_id" value="<%= book.id %>">


      <!-- Label and input for month_id -->
  <input type="hidden" name="month_id" value="<%= @month.last.id %>">

      <button class="btn btn-success">
        Nominate this book for <%=@month.last.started_on.strftime("%B %Y")%>
      </button>
<% end %>
          </form>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>




<div class="page-header">
  <h1>
    Votes by <%=@user.username%>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Cover</th>
       <th>Title</th>
        <th>Author</th>
        <th>Description</th>
        <th>Pages</th>
        <th>User</th>
        <th>Actions</th>

      </tr>

      <% @user.votes.order(created_at: :desc).each do |vote| %>
      <tr>
        <td><a href="/books/<%= vote.nomination.book_id %>"><img src="<%= vote.nomination.book.cover_url %>" width="80"></a></td>
        <td><%= vote.nomination.book.title %></td>
        <td><%= vote.nomination.book.author %></td>
        <td><%= vote.nomination.book.description %></td>
       <td><%= vote.nomination.book.page_number %></td>
        <td><%= vote.nomination.book.user.username %></td>
        <td>
          <a href="/books/<%= vote.nomination.book_id %>" class="btn btn-primary">Show</a>
          <a href="/books/<%= vote.nomination.book_id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_book/<%= vote.nomination.book_id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>

      </tr>
      <% end %>
    </table>
  </div>
</div>
